<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:background="?attr/selectableItemBackground"
    tools:background="#FAFAFA"
    >

  <TextView
      android:id="@+id/start_time"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:textSize="14sp"
      android:fontFamily="sans-serif-medium"
      android:background="@drawable/circle"
      android:textColor="@android:color/white"
      android:gravity="center"
      android:padding="2dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      tools:text="12P"
      />

  <FrameLayout
      android:id="@+id/box"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      >

    <LinearLayout
        android:id="@+id/slot_chip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/slot_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:fontFamily="sans-serif-medium"
          android:textColor="#464646"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          tools:text="Introduction to Typescript"
          />

      <TextView
          android:id="@+id/slot_subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:paddingLeft="8dp"
          android:textSize="14sp"
          android:textColor="#939393"
          tools:text="Room 140F"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="16dp"
          android:background="#eee"
          />

    </LinearLayout>

    <ImageView
        android:id="@+id/favorite_session_indicator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_star_grey"
        android:layout_gravity="right|top"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:tint="@color/orange"
        android:visibility="gone"
        tools:visibility="visible"
        />
  </FrameLayout>
</LinearLayout>