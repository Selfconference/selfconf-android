<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.selfconference.android.speakers.SpeakerListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/speaker_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/indeterminate_progress_bar_size"
        android:layout_height="@dimen/indeterminate_progress_bar_size"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>
